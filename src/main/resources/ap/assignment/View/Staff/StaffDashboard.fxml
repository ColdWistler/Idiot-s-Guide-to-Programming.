<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Staff.StaffDashboardController">

    <top>
        <VBox spacing="0">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white;">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <Region HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="languageBox" prefWidth="120.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button fx:id="logoutButton" onAction="#setLogin" style="-fx-background-color: #0033cc; -fx-text-fill: white;" text="%button.logout" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #f5f5f5;">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <Button onAction="#setBooking" text="%nav.booking" />
                <Button onAction="#viewBookings" text="%nav.view.booking" />
                <Button onAction="#viewAttractions" text="%nav.view.attractions" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <VBox spacing="15">
                    <HBox spacing="15" />
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>